#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ðŸ” Running pre-commit checks..."

# Run unit tests
echo "\nðŸ“ Running unit tests..."
npm test -- --run --reporter=verbose 2>&1 | head -n 50

# Run linting
echo "\nðŸŽ¨ Running ESLint..."
