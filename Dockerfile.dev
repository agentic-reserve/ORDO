# Development Dockerfile with hot reload
FROM node:20-alpine

# Install development tools
RUN apk add --no-cache \
    git \
    python3 \
    make \
    g++

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev)
RUN npm install

# Copy source code
COPY . .

# Expose ports
EXPOSE 3000 9229

# Start with hot reload
CMD ["npm", "run", "dev"]
